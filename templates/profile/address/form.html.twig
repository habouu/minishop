{% extends 'base.html.twig' %}

{% block title %}Profile | Addresses - minishop{% endblock %}

{% block body %}
    <div class="container my-5">
        <h1>My account</h1>

        <div class="row">
            <div class="col-md-3">
                {% include 'profile/_menu.html.twig' %}
            </div>
            <div class="col-md-9">
                <h5>My addresses</h5>
                {{ form_start(form) }}
                    <div class="row g-3">
                        <div class="col-md-6">
                            {{ form_row(form.firstname) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.lastname) }}
                        </div>
                        <div class="col-12">
                            {{ form_row(form.address) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.city) }}
                        </div>
                        <div class="col-md-4">
                            {{ form_row(form.country) }}
                        </div>
                        <div class="col-md-2">
                            {{ form_row(form.zipcode) }}
                        </div>
                        <div class="col-12">
                            {{ form_row(form.phone) }}
                        </div>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
