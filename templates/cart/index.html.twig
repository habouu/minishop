{% extends 'base.html.twig' %}

{% block title %}Cart - minishop{% endblock %}

{% block body %}
    <div class="container my-5">
        <h1>My cart</h1>

        <div class="row">
            <div class="col-md-8">
                {% for product in cart %}
                    <div class="row mt-2">
                        <div class="col-md-2">
                            <img src="/uploads/{{ product.item.image }}" alt="{{ product.item.name }}" class="img-fluid">
                        </div>
                        <div class="col-md-6">
                            <strong>{{ product.item.name }}</strong>
                            <span class="d-block small">Price: {{ product.item.pricewt|price }}</span>
                        </div>
                        <div class="col-md-2 text-right">
                            <a href="{{ path('app_cart_decrease', { id : product.item.id }) }}">-</a>
                            <span class="badge text-bg-secondary">x{{ product.qty }}</span>
                            <a href="{{ path('app_cart_add', { id : product.item.id }) }}">+</a>
                        </div>
                        <div class="col-md-2 fw-bold">
                            {{ (product.qty * product.item.pricewt)|price }}
                        </div>
                    </div>
                {% endfor %}
            </div>

            <div class="col-md-4">
                <div class="bg-light p-3">
                    <div class="d-flex justify-content-between">
                        <span class="fw-bold">Total items</span>
                        <span>{{ fullQty }}</span>
                    </div>
                    <div class="d-flex justify-content-between mt-3">
                        <span class="fw-bold">Total T.T.C</span>
                        <span>{{ totalWt|price }}</span>
                    </div>
                    <div>
                        <a href="" class="btn btn-success w-100 mt-3">Order</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
